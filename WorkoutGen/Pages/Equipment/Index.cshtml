@page "{handler?}"
@model WorkoutGen.Pages.Equipment.IndexModel
@{
    ViewData["Title"] = "Equipment";
}

<div class="row mb-3">
    <div class="col-2"></div>
    <div class="col-md-8">

        <div class="card text-center">
            <div class="card-header">
                Muscle Groups Selected
            </div>
            <div class="card-body">
                @foreach (Models.MuscleGroup mg in Model.muscleGroups)
                {
                    <span class="badge badge-dark p-2">@mg.Name</span>
                }
            </div>
        </div>

    </div>
    <div class="col-2"></div>
</div>

<div class="row">
    <div class="col-2"></div>
    <div class="col-md-8">

        <form method="post" asp-page="/exercises/index">

            <div class="row mb-2">

                <div class="form-group col-md-12">
                    <label class="font-weight-bold" for="select2_muscle_groups">Select equipment</label>
                    <select id="select2_equipment" name="equipment[]" multiple="multiple" asp-items="Model.Options_Equipment" class="form-control"></select>
                    <p class="text-center"><span id="eCount" class="font-weight-bold">@Model.exerciseCount</span> exercises available with this set</p>
                </div>

            </div>

            <div class="form-group text-center">
                <input id="btnGenerateExercise" type="submit" value="Generate exercise" class="btn btn-primary btn-lg" />
            </div>

        </form>

    </div>
    <div class="col-2"></div>
</div>

@section Scripts
{
    <script src="~/js/equipment.js"></script>
}